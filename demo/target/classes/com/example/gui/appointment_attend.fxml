<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui.AppointmentAttendController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="header-label" text="Atender Citas" />

    <BorderPane>
        <left>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
                <Label text="Seleccionar Doctor:" />
                <ComboBox fx:id="doctorCombo" onAction="#onDoctorSelect" prefWidth="250.0" promptText="Elija un doctor..." />
                
                <Label text="Citas Pendientes:" />
                <ListView fx:id="appointmentsList" prefHeight="300.0" prefWidth="250.0" />
            </VBox>
        </left>
        <center>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets left="20.0" />
                </padding>
                
                <Label text="DiagnÃ³stico:" />
                <TextArea fx:id="diagnosisArea" prefHeight="80.0" wrapText="true" />
                
                <Label text="Tratamiento:" />
                <TextArea fx:id="treatmentArea" prefHeight="80.0" wrapText="true" />

                <!-- Prescription Section -->
                <Separator />
                <Label text="Formular Medicamentos:" style="-fx-font-weight: bold;"/>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <ComboBox fx:id="medsCombo" promptText="Medicamento" prefWidth="200.0"/>
                    <TextField fx:id="medQtyField" promptText="Cantidad" prefWidth="80.0"/>
                    <Button text="Agregar" onAction="#onAddMed"/>
                </HBox>
                <TableView fx:id="prescribedMedsTable" prefHeight="150.0">
                    <columns>
                        <TableColumn fx:id="colMedName" text="Medicamento" prefWidth="150.0"/>
                        <TableColumn fx:id="colMedQty" text="Cant." prefWidth="80.0"/>
                    </columns>
                </TableView>
                
                <Button fx:id="finishButton" mnemonicParsing="false" onAction="#onAttend" styleClass="action-button" text="Finalizar Cita &amp; Guardar Historia" disable="true" maxWidth="Infinity"/>
            </VBox>
        </center>
    </BorderPane>
</VBox>
